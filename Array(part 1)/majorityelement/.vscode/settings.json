{
  // üî§ Typography & Readability
  // Customize the appearance of text in the editor for better readability
  "editor.fontSize": 20,                              // Set the text size in the editor
  "editor.fontFamily": "Cascadia Code, Fira Code, JetBrains Mono", // Choose modern, monospaced fonts
  "editor.fontLigatures": "'ss01', 'ss02', 'calt'",  // Enable ligatures for improved aesthetics
  "editor.lineHeight": 26,                           // Define line spacing for better text flow
  "editor.letterSpacing": 0.5,                       // Add slight spacing between letters
  "editor.fontWeight": "450",                        // Set text weight for a balanced appearance

  // üöÄ Performance Optimization
  // Disable unnecessary features to enhance speed and responsiveness
  "editor.minimap.enabled": false,                   // Turn off the minimap for less distraction
  "editor.lineNumbers": "relative",                  // Show relative line numbers for quick navigation
  "editor.renderLineHighlight": "gutter",            // Highlight the gutter for the active line
  "workbench.editor.enablePreview": false,           // Open files directly, not in preview mode

  // üé® UI Customization
  // Adjust VS Code's look and feel to suit your preferences
  "workbench.colorTheme": "One Dark Pro Flat",       // Apply a dark, visually appealing theme
  "workbench.iconTheme": "material-icon-theme",      // Use modern icons for files and folders
  "workbench.sideBar.location": "left",              // Place the sidebar on the left
  "workbench.statusBar.visible": true,               // Keep the status bar visible for key info
  "workbench.activityBar.location": "default",       // Default activity bar placement

  // üìÅ File Management
  // Automate and optimize how files are handled
  "files.autoSave": "afterDelay",                    // Save changes automatically after a short delay
  "files.autoSaveDelay": 1000,                       // Delay before saving files (in milliseconds)
  "files.trimTrailingWhitespace": true,              // Remove extra spaces at the end of lines
  "files.insertFinalNewline": true,                  // Ensure a final newline is added to all files
  "files.exclude": {                                 // Hide unwanted files/folders in the explorer
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  // üîç Search Optimization
  // Exclude unnecessary folders from search to improve focus and speed
  "search.exclude": {
    "**/node_modules": true,                         // Exclude dependencies folder
    "**/dist": true,                                 // Exclude build output folders
    "**/build": true,
    "**/vendor": true,                               // Exclude vendor libraries
    "**/.next": true,                                // Ignore Next.js build files
    "**/.nuxt": true                                 // Ignore Nuxt.js build files
  },

  // üíª Coding Experience
  // Fine-tune coding-related settings for better productivity
  "editor.formatOnSave": true,                       // Automatically format code when saving
  "editor.formatOnType": true,                       // Format code as you type
  "editor.linkedEditing": true,                      // Edit opening and closing tags simultaneously
  "editor.wordWrap": "on",                           // Wrap long lines for better visibility
  "editor.guides.indentation": false,                // Hide indentation guides for a cleaner look
  "editor.renderWhitespace": "boundary",             // Show only boundary whitespace characters
  "editor.cursorBlinking": "smooth",                 // Use a smooth blinking cursor animation
  "editor.cursorSmoothCaretAnimation": "on",         // Enable smooth movement of the cursor

  // üß† IntelliSense & Suggestions
  // Configure the editor's code assistance for a smarter experience
  "editor.quickSuggestions": {                       // Enable IntelliSense suggestions
    "comments": false,                               // Disable suggestions inside comments
    "strings": true,                                 // Enable suggestions in strings
    "other": true                                    // Enable suggestions for other code elements
  },
  "editor.suggestSelection": "first",                // Auto-select the first suggestion
  "editor.snippetSuggestions": "top",                // Show code snippets at the top of suggestions

  // üåê Language & Emmet Support
  // Enable additional language and Emmet functionalities
  "emmet.includeLanguages": {
    "vue-html": "html",                              // Treat Vue files as HTML for Emmet
    "blade": "html",                                 // Enable Emmet in Blade templates
    "react": "html",                                 // Enable Emmet in React files
    "javascript": "html"                             // Use Emmet in JavaScript files
  },

  // üñ•Ô∏è Terminal Customization
  // Improve the integrated terminal's usability
  "terminal.integrated.fontSize": 14,                // Set terminal font size
  "terminal.integrated.lineHeight": 1.4,             // Adjust terminal line spacing
  "terminal.integrated.cursorStyle": "line",         // Use a line cursor style
  "terminal.integrated.cursorBlinking": true,        // Enable blinking cursor in the terminal

  // üîí Security & Workspace
  // Ensure security while maintaining smooth operations
  "security.workspace.trust.untrustedFiles": "open", // Open untrusted files without prompts
  "typescript.updateImportsOnFileMove.enabled": "always", // Auto-update imports when moving TypeScript files
  "javascript.updateImportsOnFileMove.enabled": "always"  // Auto-update imports when moving JavaScript files
}
